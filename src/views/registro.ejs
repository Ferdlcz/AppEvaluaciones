<body>
    <div id="utna-bg"></div>
    <div class="snack mx-auto w-25 d-flex flex-nowrap justify-content-center position-fixed">
        <div id="snack-container" class="container-fluid mt-5"></div>
    </div>
    <nav id="layoutNavbar" class="d-none"></nav>

    <div id="spinner-loading" class="floating-screen show">
        <div class="w-100 h-100">
            <div>
                <div class="spinner-border text-info"></div>
            </div>
        </div>
    </div>

    

    <div id="container">
        <div id="floatingLogin" class="hide floating"></div>
                
        <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
            viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
            <defs>
                <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
            </defs>
            <g class="parallax">
                <use xlink:href="#gentle-wave" x="40" y="0" fill="rgba(255,255,255,0.7" />
                <use xlink:href="#gentle-wave" x="40" y="4" fill="rgba(255,255,255,0.5)" />
                <use xlink:href="#gentle-wave" x="40" y="7" fill="rgba(255,255,255,0.3)" />
                <use xlink:href="#gentle-wave" x="40" y="10" fill="#fff" />
            </g>
        </svg>

        <div class="container vw-100 vh-100">
            <div class="login-box">
                <span></span>


                <form action="/registro" method="POST">
                <div class="container d-flex">
                    <img src="/img/logo-utna.png" alt="Logo UTNA" class="px-3 w-sm-80 w-md-60 mx-auto img-fluid">
                </div>
                <h2 class="pt-4 pb-3">
                    <span>Registrar usuario</span>
                </h2>
                <div class="input-box">
                    <input class=" type="text" name="usuario" >
                    <label>
                        <span >Usuario</span>
                    </label>
                </div>
                <div class="input-box">
                    <input type="password" name="password"> 
                    <label>
                        <span >Contraseña</span>
                    </label>
                </div>

                <%if (signupMessage) {%>
                    <p style="text-align: center; color:white;"><%= signupMessage %></p>
                  <% } %>
                
                    </script>
                  
                <div class="container d-flex">
                
                    <button type="submit" class="mx-auto">Registrar</button>
                </div>
            </div>
        </div>
    </div>
</form>	



